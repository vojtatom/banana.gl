{
    "compilerOptions": {
      "outDir": "types",
      "target": "ES2018",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "allowJs": true,
      "emitDeclarationOnly": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}